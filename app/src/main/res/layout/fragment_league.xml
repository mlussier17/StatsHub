<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ml.statshub.statshub.LeagueFragment">

    <TextView
        android:id="@+id/showLeagues"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Ligues"
        android:layout_alignParentTop="true"
        android:textSize="40dp"/>
    <View
        android:id="@+id/line"
        android:layout_below="@id/showLeagues"
        android:layout_height="2dip"
        android:layout_width="wrap_content"
        android:background="#FF909090" />


    <RecyclerView
        android:id="@+id/ListLeagues"
        android:layout_below="@id/line"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="fish name"
            android:id="@+id/textName"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/textTeams"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="price"
            android:id="@+id/textTeams"
            android:textColor="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />



    </RecyclerView>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </android.support.v7.widget.RecyclerView>


        </ScrollView>

    </LinearLayout>-->

</RelativeLayout>
