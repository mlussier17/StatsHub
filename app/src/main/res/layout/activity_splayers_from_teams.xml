<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_players_from_teams"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ml.statshub.statshub.Hockey.PlayersFromTeamsActivity">

    <TextView
        android:id="@+id/showPlayers"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:textSize="22dp"/>
    <View
        android:id="@+id/line"
        android:layout_below="@id/showPlayers"
        android:layout_height="2dip"
        android:layout_width="wrap_content"
        android:background="#FF909090" />
    <LinearLayout
        android:id="@+id/statsPlayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:text="Nom"
                    android:layout_marginEnd="2dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#"
                    android:layout_marginEnd="8dp"
                    android:gravity="end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PJ"
                    android:layout_marginEnd="8dp"
                    android:gravity="end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:layout_marginEnd="10dp"
                    android:gravity="end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CJ"
                    android:layout_marginEnd="10dp"
                    android:gravity="end" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CR"
                    android:gravity="end" />
            </TableRow>
        </TableLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statsPlayers">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/listPlayers"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" >


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</RelativeLayout>